<h1>List of Books</h1> <!--erb = embedded ruby; % = special ruby tag for 'erb'-->

<table>
	<thead>
		<tr>
		<th>Name</th>
		<th>Author</th>
		<th>Price</th>
		<th>Quantity</th>
		</tr>
	</thead>
	<tbody>
		<% @books.each do |book| %>
			<tr>
				<td><%= book.name %></td>
				<td><%= book.author %></td>
				<td><%= book.price %></td>
				<td><%= book.quantity %></td>
			</tr>
		<% end %> 	
	</tbody>
</table>